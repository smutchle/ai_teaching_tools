{
  "dataset_config": {
    "name": "ds001_business_customer_lifetime_value",
    "description": "Predict total revenue from a customer over their relationship with company",
    "random_seed": 1,
    "n_rows": 500000,
    "correlations": [
      {
        "variables": [
          "purchase_frequency",
          "avg_transaction_value"
        ],
        "correlation": 0.45,
        "method": "cholesky"
      },
      {
        "variables": [
          "tenure_months",
          "purchase_frequency"
        ],
        "correlation": 0.52,
        "method": "cholesky"
      },
      {
        "variables": [
          "num_product_categories",
          "avg_transaction_value"
        ],
        "correlation": 0.38,
        "method": "cholesky"
      },
      {
        "variables": [
          "customer_satisfaction_score",
          "purchase_frequency"
        ],
        "correlation": 0.41,
        "method": "cholesky"
      }
    ],
    "features": [
      {
        "name": "purchase_frequency",
        "description": "Number of purchases per month",
        "data_type": "float",
        "distribution": {
          "type": "weibull",
          "shape": 1.8,
          "scale": 2.5,
          "location": 0.5
        },
        "missing_rate": 0.0,
        "outlier_rate": 0.0
      },
      {
        "name": "avg_transaction_value",
        "description": "Average transaction value in dollars",
        "data_type": "float",
        "distribution": {
          "type": "normal",
          "mean": 85.0,
          "std": 35.0,
          "min_clip": 10.0,
          "max_clip": 500.0
        },
        "missing_rate": 0.0,
        "outlier_rate": 0.0
      },
      {
        "name": "tenure_months",
        "description": "Customer tenure in months",
        "data_type": "int",
        "distribution": {
          "type": "weibull",
          "shape": 1.2,
          "scale": 18.0,
          "location": 1.0
        },
        "missing_rate": 0.0,
        "outlier_rate": 0.0
      },
      {
        "name": "num_product_categories",
        "description": "Number of different product categories purchased",
        "data_type": "int",
        "distribution": {
          "type": "normal",
          "mean": 3.2,
          "std": 1.8,
          "min_clip": 1.0,
          "max_clip": 10.0
        },
        "missing_rate": 0.0,
        "outlier_rate": 0.0
      },
      {
        "name": "discount_usage_rate",
        "description": "Percentage of purchases using discounts",
        "data_type": "float",
        "distribution": {
          "type": "uniform",
          "min": 0.0,
          "max": 0.8
        },
        "missing_rate": 0.0,
        "outlier_rate": 0.0
      },
      {
        "name": "customer_satisfaction_score",
        "description": "Customer satisfaction score from 1 to 10",
        "data_type": "float",
        "distribution": {
          "type": "normal",
          "mean": 7.2,
          "std": 1.5,
          "min_clip": 1.0,
          "max_clip": 10.0
        },
        "missing_rate": 0.0,
        "outlier_rate": 0.0
      },
      {
        "name": "support_tickets_count",
        "description": "Total number of support tickets submitted",
        "data_type": "int",
        "distribution": {
          "type": "weibull",
          "shape": 0.8,
          "scale": 2.0,
          "location": 0.0
        },
        "missing_rate": 0.0,
        "outlier_rate": 0.0
      },
      {
        "name": "referral_count",
        "description": "Number of customers referred by this customer",
        "data_type": "int",
        "distribution": {
          "type": "weibull",
          "shape": 0.7,
          "scale": 1.5,
          "location": 0.0
        },
        "missing_rate": 0.0,
        "outlier_rate": 0.0
      }
    ],
    "target": {
      "name": "customer_lifetime_value",
      "description": "Total revenue from customer over their relationship with company",
      "data_type": "float",
      "expression": "150 + 280*purchase_frequency + 8.5*avg_transaction_value + 12*tenure_months + 45*num_product_categories - 75*discount_usage_rate + 25*customer_satisfaction_score - 15*support_tickets_count + 35*referral_count",
      "noise_percent": 2.5,
      "missing_rate": 0.0,
      "outlier_rate": 0.0
    }
  }
}