{
  "dataset_config": {
    "name": "ds027_business_loan_default_risk_lowmedhigh_dirty",
    "description": "Classify creditworthiness into risk categories",
    "random_seed": 27,
    "n_rows": 500000,
    "correlations": [
      {
        "variables": [
          "credit_score",
          "annual_income"
        ],
        "correlation": 0.45,
        "method": "cholesky"
      },
      {
        "variables": [
          "debt_to_income_ratio",
          "monthly_debt_payments"
        ],
        "correlation": 0.65,
        "method": "cholesky"
      },
      {
        "variables": [
          "employment_years",
          "annual_income"
        ],
        "correlation": 0.35,
        "method": "cholesky"
      },
      {
        "variables": [
          "credit_score",
          "debt_to_income_ratio"
        ],
        "correlation": -0.55,
        "method": "cholesky"
      }
    ],
    "features": [
      {
        "name": "credit_score",
        "description": "FICO credit score ranging from 300 to 850",
        "data_type": "int",
        "distribution": {
          "type": "normal",
          "mean": 680,
          "std": 85,
          "min_clip": 300,
          "max_clip": 850
        },
        "missing_rate": 0.02,
        "outlier_rate": 0.01,
        "outlier_method": "extreme_both",
        "outlier_multiplier": 3.0
      },
      {
        "name": "annual_income",
        "description": "Annual gross income in dollars",
        "data_type": "float",
        "distribution": {
          "type": "weibull",
          "shape": 1.8,
          "scale": 65000,
          "location": 25000
        },
        "missing_rate": 0.02,
        "outlier_rate": 0.01,
        "outlier_method": "extreme_both",
        "outlier_multiplier": 3.0
      },
      {
        "name": "debt_to_income_ratio",
        "description": "Total monthly debt payments divided by monthly gross income",
        "data_type": "float",
        "distribution": {
          "type": "normal",
          "mean": 0.35,
          "std": 0.15,
          "min_clip": 0.05,
          "max_clip": 0.85
        },
        "missing_rate": 0.02,
        "outlier_rate": 0.01,
        "outlier_method": "extreme_both",
        "outlier_multiplier": 3.0
      },
      {
        "name": "employment_years",
        "description": "Years of employment history at current job",
        "data_type": "float",
        "distribution": {
          "type": "weibull",
          "shape": 2.2,
          "scale": 4.5,
          "location": 0.5
        },
        "missing_rate": 0.02,
        "outlier_rate": 0.01,
        "outlier_method": "extreme_both",
        "outlier_multiplier": 3.0
      },
      {
        "name": "monthly_debt_payments",
        "description": "Total monthly debt payments in dollars",
        "data_type": "float",
        "distribution": {
          "type": "normal",
          "mean": 1200,
          "std": 600,
          "min_clip": 0,
          "max_clip": 5000
        },
        "missing_rate": 0.02,
        "outlier_rate": 0.01,
        "outlier_method": "extreme_both",
        "outlier_multiplier": 3.0
      },
      {
        "name": "loan_amount_requested",
        "description": "Amount of loan requested in dollars",
        "data_type": "float",
        "distribution": {
          "type": "uniform",
          "min": 5000,
          "max": 250000
        },
        "missing_rate": 0.02,
        "outlier_rate": 0.01,
        "outlier_method": "extreme_both",
        "outlier_multiplier": 3.0
      },
      {
        "name": "previous_defaults",
        "description": "Number of previous loan defaults in credit history",
        "data_type": "int",
        "distribution": {
          "type": "weibull",
          "shape": 0.8,
          "scale": 0.5,
          "location": 0
        },
        "missing_rate": 0.02,
        "outlier_rate": 0.01,
        "outlier_method": "extreme_both",
        "outlier_multiplier": 3.0
      },
      {
        "name": "savings_account_balance",
        "description": "Current savings account balance in dollars",
        "data_type": "float",
        "distribution": {
          "type": "weibull",
          "shape": 1.5,
          "scale": 15000,
          "location": 0
        },
        "missing_rate": 0.02,
        "outlier_rate": 0.01,
        "outlier_method": "extreme_both",
        "outlier_multiplier": 3.0
      }
    ],
    "target": {
      "name": "loan_default_risk_lowmedhigh",
      "description": "Loan default risk classification",
      "data_type": "categorical",
      "expression": "1 / (1 + np.exp(-(5 - 0.01*credit_score + 8*debt_to_income_ratio - 0.00001*annual_income - 0.2*employment_years + 2*previous_defaults + 0.000005*loan_amount_requested - 0.00002*savings_account_balance)))",
      "noise_percent": 2.5,
      "missing_rate": 0.02,
      "categories": [
        "Low Risk",
        "Low Risk",
        "Low Risk",
        "Low Risk",
        "Medium Risk",
        "Medium Risk",
        "Medium Risk",
        "High Risk",
        "High Risk",
        "High Risk"
      ]
    }
  }
}